{
	"name": "tetrinho",
	"authors": [
		"unleashy"
	],
	"description": "Tetris",
	"copyright": "Copyright Â© 2018, unleashy",
    "license": "MIT",

    "dependencies": {
        "derelict-sdl2": "~>3.1.0-alpha.2",
        "accessors": "~>1.2.4",
        "sdlang-d": "~>0.10.2"
    },

    "targetPath": "bin",

    "buildTypes": {
        "debug": {
            "buildOptions": [
                "debugMode",
                "debugInfo"
            ],
            "lflags-windows-x86_64": [
                "/ENTRY:mainCRTStartup"
            ]
        },
        "release": {
            "buildOptions": [
                "releaseMode",
                "optimize",
                "inline",
                "debugInfo"
            ],
            "lflags-windows-x86": [
                "/SUBSYSTEM:WINDOWS:5.01"
            ],
            "lflags-windows-x86_64": [
                "/SUBSYSTEM:WINDOWS,5.02",
                "/ENTRY:mainCRTStartup"
            ]
        }
    }
}